<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppToolbar">
        <item name="android:textColorPrimary">@color/title_text_color</item>
        <item name="android:textColorSecondary">@color/title_text_color</item>
        <item name="android:textViewStyle">@style/toolBar_title_style</item>
    </style>

    <!-- Toolbar Title Style -->
    <style name="toolBar_title_style">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:fontFamily">@font/brandon_med</item>
    </style>

    <style name="toolBar_secondary_title_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:fontFamily">@font/brandon_reg</item>

    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/brandon_med</item>
    </style>


</resources>
